{
    "manifest_version": 2,
    "name": "inspector-v3",
    "short_name": "TODO",
    "version": "0.0.0",
    "minimum_chrome_version": "10.0",
    "devtools_page": "html/devtool_init.html",
    "background": {
        "scripts": [
            "dist/background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "web_accessible_resources": [
        "dist/embbed.js"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "dist/content_script.js"
            ],
            "all_frames": true
        }
    ]
}