{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "types": [
            "chrome"
        ],
        "jsx": "react",
        "lib": [
            "dom",
            "es6",
            "dom.iterable",
            "scripthost",
            "esnext.asynciterable"
        ]
    },
    "filesGlob": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/*.ts",
        "src/*.tsx"
    ]
}