.indicatorContainer
    position relative
    height 48px
    display grid
    grid-template-columns 1fr 32px
    grid-template-rows 1fr auto 1fr
    grid-template-areas "A1 A2" "LABEL SPINNER" "A3 A4"
    text-align center
    border 1px solid gray
    &:hover
        background-color lightgray
        cursor pointer
    p
        margin 0px
.spinnerContainer
    grid-area SPINNER
.labelContainer
    grid-area LABEL

.disabledIcon,.disabledLabel
    color gray

.indicatorLabelContainer
    grid-area LABEL
    display grid
    grid-template-columns 45px 1fr
    grid-template-areas "ICON CONTEXTLABEL"

.indicatorLabelIconContainer
    grid-area ICON 
    color #9B90C0

.indicatorLabelLabelContainer
    grid-area CONTEXTLABEL

.idLabel
    color #FE8780
.classLabel
    color #A2BECD

.expanderOrigin
    position absolute
    top 46px
    left -1px
    right -1px

.frameElementContainer
    border 1px solid gray
    display grid
    grid-template-columns 32px 1fr
    grid-template-rows auto auto
    grid-template-areas "ICON URL" "A1 CANVASES"

.iconContainer
    grid-area ICON
.urlContainer
    grid-area URL
.canvasListContainer
    grid-area CANVASES
.treeElementContainer
    border 1px solid gray
    margin 0px -1px -1px 0px