.indicatorContainer
    position relative
    height 48px
    display grid
    grid-template-columns 1fr 32px
    grid-template-rows 1fr auto 1fr
    grid-template-areas "A1 A2" "LABEL SPINNER" "A3 A4"
    text-align center
    border-bottom 1px solid rgba(30,30,30,0.3)
    &:hover
        background-color lightgray
        cursor pointer
    p
        margin 0px
        white-space nowrap
        text-overflow ellipsis
.spinnerContainer
    grid-area SPINNER
.labelContainer
    grid-area LABEL

.disabledIcon,.disabledLabel
    color gray
    user-select none

.indicatorLabelContainer
    grid-area LABEL
    display grid
    grid-template-columns 45px 1fr
    grid-template-areas "ICON CONTEXTLABEL"

.indicatorLabelIconContainer
    grid-area ICON 
    color #9B90C0

.indicatorLabelLabelContainer
    grid-area CONTEXTLABEL

.idLabel
    color #FE8780
.classLabel
    color #A2BECD

.expanderOrigin
    position absolute
    top 46px
    left -1px
    right -1px

.frameElementContainer
    border 1px solid gray
    display grid
    grid-template-columns 32px calc(100% - 32px)
    grid-template-rows 32px auto auto
    align-items center
    grid-template-areas "ICON URL" "A1 CANVASES" "A2 FRAMES"
    background-color white
    &:hover
        background-color #CCAAFF

.iconContainer
    grid-area ICON
.urlContainer
    grid-area URL
    text-align left
    padding 0px 10px
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
.canvasListContainer
    grid-area CANVASES
    &:hover
        background-color #AA88CC

.framesListContainer
    grid-area FRAMES

.treeElementContainer
    border 1px solid gray
    margin 0px -1px -1px 0px
    height 32px
    display flex
    align-items center
    justify-content center

.expanderContainer
    z-index 1000
    position relative
    transform-origin top
    animation expand .1s ease 0s 1;

@keyframes expand {
  0% {
    transform: scaleY(0);
  }

  100% {
    transform: scaleY(1);
  }
}